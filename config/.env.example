# Network Configuration
# For local development, these are the default Hardhat node settings
LOCALHOST_RPC_URL=http://127.0.0.1:8545

# Testnet/Mainnet RPC URLs (use Alchemy, Infura, or other provider)
# Get your API key from https://www.alchemy.com/ or https://infura.io/
SEPOLIA_RPC_URL=https://eth-sepolia.g.alchemy.com/v2/YOUR_ALCHEMY_API_KEY
MAINNET_RPC_URL=https://eth-mainnet.g.alchemy.com/v2/YOUR_ALCHEMY_API_KEY

# Alternative: Infura
# SEPOLIA_RPC_URL=https://sepolia.infura.io/v3/YOUR_INFURA_PROJECT_ID
# MAINNET_RPC_URL=https://mainnet.infura.io/v3/YOUR_INFURA_PROJECT_ID

# Private Keys (NEVER commit your real private keys!)
# For local development, you can use one of Hardhat's test accounts
# Account #0: 0xac0974bec39a17e36ba4a6b4d238ff944bacb478cbed5efcae784d7bf4f2ff80 (10000 ETH)
# Account #1: 0x59c6995e998f97a5a0044966f0945389dc9e86dae88c7a8412f4603b6b78690d (10000 ETH)
PRIVATE_KEY=your_private_key_here_without_0x_prefix

# Etherscan API Key (for contract verification)
# Get your API key from https://etherscan.io/myapikey
ETHERSCAN_API_KEY=your_etherscan_api_key_here

# Contract Addresses (will be populated after deployment)
# Localhost (Chain ID: 31337)
LOCALHOST_DAPP_TOKEN_ADDRESS=
LOCALHOST_USD_TOKEN_ADDRESS=
LOCALHOST_AMM_ADDRESS=

# Sepolia Testnet (Chain ID: 11155111)
SEPOLIA_DAPP_TOKEN_ADDRESS=
SEPOLIA_USD_TOKEN_ADDRESS=
SEPOLIA_AMM_ADDRESS=

# Mainnet (Chain ID: 1) - Use with extreme caution!
MAINNET_DAPP_TOKEN_ADDRESS=
MAINNET_USD_TOKEN_ADDRESS=
MAINNET_AMM_ADDRESS=

# Gas Reporter (optional)
COINMARKETCAP_API_KEY=your_coinmarketcap_api_key_here
REPORT_GAS=false

